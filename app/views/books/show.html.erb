<main>

    <% if flash[:notice] %>
    <div class="flash">
    <%= flash[:notice] %>
    </div>
    <% end %>


    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-3'>

        <%= render 'books/list', user: @user, book: @newbook %>

        </div>

        <div class='col-md-8 offset-md-1'>
          <h2>Book detail</h2>
          <table class='table table-hover table-inverse'>

               <tr>
                <td><%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                
             
                <td>
                  <div id="favorite_buttons_<%= @book_comment.id %>">
                   <%= render partial: 'favorites/favorite', locals: { book: @book} %>
                  </div>
                </td>

                  <td>
                   <div class="comments">
                    <p>コメント件数：<%= @book.book_comments.count %></p>
                    </div>
                  </td>

                </tr>

                <tr>
                  <td><%= link_to @book.user.name,user_path(@user.id) %></td>
                </tr>

                <div id="book_comment_buttons_<%= @book.id %>">
                   <%= render partial: 'book_comments/book_comment', locals: { book: @book, user: @user, book_comment: @book_comment} %>
                </div>
          
          </table>
        </div>

      </div>
    </div>
  </main>

