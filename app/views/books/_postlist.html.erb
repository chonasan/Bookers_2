
          <h2>Book</h2>
          <table class='table table-hover table-inverse'>

            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>


           　<% books.each do |book| %>
              <tr>
                <!--< attachment_image_tag 保存先インスタンス名, :保存先カラム名, :サイズ（横幅,高さ）, 画像拡張子, 代替画像 -->

                <td>
                  <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
                <td>
                <% if book.favorited_by?(current_user) %>
                
                 <p><span>♥ : </span><%=link_to  book.favorites.count, book_favorites_path(book.id), method: :delete, remote: true %></p>
                  <p>
                    <%= link_to book_favorites_path(book), method: :delete , remote: true do %>
                      ♥<%= book.favorites.count %> いいね
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <p><span>お気に入り登録: </span><%=link_to book.favorites.count, book_favorites_path(book.id), method: :post, remote: true %></p>
                    <%= link_to book_favorites_path(book), method: :post, remote: true do %>
                      ♡<%= book.favorites.count %> いいね
                    <% end %>
                  </p>
                <% end %>
                </td>


                  <td>
                   <div class="comments">
                   <p>コメント件数：<%= book.book_comments.count %></p>
                    </div>
                  </td>

              </tr>
              <% end %>

            </table>
