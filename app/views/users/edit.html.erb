<% if @user.errors.any? %>
    <p><%= @user.errors.count %>errors prohibited this book from being saved:</p>
      <% @user.errors.full_messages.each do |message| %>
      <p>・<%= message %></p>
      <% end %>
<% end %>


 <main>
  <p id="notice"></p>
  <div class='container'>
    <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
        </div>
        <div>
          <label for="book_body">Introduction</label>
          <p><%= f.text_area :introduction %></p>
        </div>

        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</main>