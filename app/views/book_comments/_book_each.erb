<table id="book_comment_buttons_<%= @book.id %>">
  <% book_comments.each do |book_comment| %>
      <tr>
        <td> <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %> </td>
        <td> <%= book_comment.comment %> </td>
  
        <% if book_comment.user == current_user %>
          <td><%= link_to "Destroy", book_book_comment_path(book.id, book_comment.id), method: :delete, remote: true %></td>
        <% end %>
      </tr>
  
      <tr>
        <td><%= link_to book_comment.user.name,user_path(user.id) %></td>
      </tr>
  <% end %>
</table>